# Solana RPC endpoint (Helius recommended for reliability)
SOL_RPC_URL=https://api.mainnet-beta.solana.com

# Wallet private key (base58 encoded) - AgentWallet
WALLET_PRIVATE_KEY=

# Jupiter API (no key needed for public endpoints)
JUPITER_API_URL=https://quote-api.jup.ag/v6

# Colosseum Hackathon
COLOSSEUM_API_KEY=
COLOSSEUM_AGENT_ID=3860

# Bitcoin LAB API (researchbitcoin.net) - on-chain data source
# When set, the agent fetches live data from the API instead of reading data/indicators.json
BITCOIN_LAB_API_TOKEN=

# Agent mode: "auto" (execute trades) or "alert" (alerts only)
AGENT_MODE=alert

# Auto mode settings
MAX_SLIPPAGE_BPS=100
MAX_TRADE_PERCENT=100

# Loop mode interval (minutes)
LOOP_INTERVAL_MINUTES=30
